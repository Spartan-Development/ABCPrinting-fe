---
interface Props {
  label?: string;
  extraClass?: string;
}

const { label, extraClass } = Astro.props;
---

<button
  type="button"
  class={`py-2 px-4 rounded-full bg-main-950 hover:bg-main-900 cursor-pointer transition text-white flex items-center gap-2 ${extraClass}`}
>
  <slot name="start" />
  {label}
  <slot name="end" />
</button>
