---
import { Picture } from "astro:assets";

import logo from "../../assets/images/common/logo.png";
import IconUser from "../../assets/icons/user.svg";

import LINKS from "../../assets/navigation.json";
---

<header class="h-[150px] p-8 sticky grid grid-cols-[200px_1fr]">
  <div class="max-h-full">
    <a href="/">
      <Picture
        class:list={"h-full max-h-[100px] w-auto"}
        src={logo}
        formats={["avif", "webp"]}
        alt="ABC Printing Logo"
      />
    </a>
  </div>

  <div class="max-h-full flex items-center justify-end gap-8">
    <nav role="navigation">
      <ul class="flex gap-8">
        {
          LINKS.map((l) => (
            <li>
              <a href={l.link} class="text-main-900 hover:text-main-600">
                {l.label}
              </a>
            </li>
          ))
        }
      </ul>
    </nav>

    <div>
      <a
      href="#"
        class="py-2 px-4 rounded-full bg-main-900 text-white flex items-center gap-2"
      >
        <IconUser width={20} height={20} />

        Iniciar sesi√≥n
      </a>
    </div>
  </div>
</header>
